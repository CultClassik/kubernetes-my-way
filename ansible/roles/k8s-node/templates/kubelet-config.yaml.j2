kind: KubeletConfiguration
apiVersion: kubelet.config.k8s.io/v1beta1
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
  x509:
    clientCAFile: /var/lib/kubernetes/ca.pem
authorization:
  mode: Webhook
clusterDomain: "cluster.local"
clusterDNS:
  - {{ cluster_dns }}
podCIDR: {{ pod_cidr }}
resolvConf: /run/systemd/resolve/resolv.conf
runtimeRequestTimeout: 15m
tlsCertFile: /var/lib/kubernetes/{{ inventory_hostname_short }}.pem
tlsPrivateKeyFile: /var/lib/kubernetes/{{ inventory_hostname_short }}-key.pem
staticPodPath: /etc/kubernetes/manifests