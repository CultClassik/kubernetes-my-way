[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart=/usr/local/bin/kube-controller-manager \
  --bind-address=0.0.0.0 \
  --cluster-cidr={{ k8s_cluster_cidr }} \
  --cluster-name=kubernetes \
  --cluster-signing-cert-file={{ k8s_controller_certs_dir }}/ca.pem \
  --cluster-signing-key-file={{ k8s_controller_certs_dir }}/ca-key.pem \
  --kubeconfig=/var/lib/kubernetes/kube-controller-manager.kubeconfig \
  --leader-elect=true \
  --root-ca-file={{ k8s_controller_certs_dir }}/ca.pem \
  --service-account-private-key-file={{ k8s_controller_certs_dir }}/service-account-key.pem \
  --service-cluster-ip-range={{ k8s_service_cluster_ip_range }} \
  --use-service-account-credentials=true \
  --v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
